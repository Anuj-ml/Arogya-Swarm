# ==============================================================================
# AROGYA-SWARM ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your actual values
# This file is for DOCKER COMPOSE environments
# For local development without Docker, use backend/.env instead
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION (Required)
# ------------------------------------------------------------------------------
# These variables are used by Docker Compose to create the PostgreSQL container
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=arogya

# Database connection URL for backend application
# For Docker: use 'db' as hostname (container name)
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/arogya

# ------------------------------------------------------------------------------
# CORS CONFIGURATION (Required)
# ------------------------------------------------------------------------------
# Comma-separated list of allowed frontend origins
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# ------------------------------------------------------------------------------
# AI & API KEYS (Required for core features)
# ------------------------------------------------------------------------------
# Google Gemini API - Required for AI diagnosis, nutrition plans, surge prediction
# Get your key: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# OpenWeatherMap API - Required for weather data and surge prediction
# Get your key: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweather_api_key_here

# ------------------------------------------------------------------------------
# OPTIONAL APIs (Add as needed)
# ------------------------------------------------------------------------------
# OpenRouteService - For route optimization and ambulance dispatch
OPENROUTESERVICE_API_KEY=

# MSG91 - For SMS notifications (India-specific)
MSG91_AUTH_KEY=

# Cloudinary - For medical image storage
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Razorpay - For payment processing
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# ------------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# ------------------------------------------------------------------------------
# Environment: development, staging, production
APP_ENV=development

# Debug mode (true for development, false for production)
DEBUG=true

# Frontend URL (for CORS and callbacks)
FRONTEND_URL=http://localhost:5173

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
