# Database Configuration
# PostgreSQL credentials (used by Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=arogya

# Database connection URL
# For local development without Docker, use localhost
# For Docker, the DATABASE_URL is set in docker-compose.yml
DATABASE_URL=postgresql://postgres:password@localhost:5432/arogya

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# Google Gemini API (REQUIRED)
GOOGLE_API_KEY=your_gemini_api_key_here

# OpenWeatherMap API (REQUIRED)
OPENWEATHERMAP_API_KEY=your_weather_api_key_here

# Optional APIs
OPENROUTESERVICE_API_KEY=
MSG91_AUTH_KEY=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
