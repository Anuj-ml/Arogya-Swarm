# ==============================================================================
# AROGYA-SWARM BACKEND CONFIGURATION (LOCAL DEVELOPMENT)
# ==============================================================================
# This file is for RUNNING BACKEND LOCALLY without Docker
# For Docker environments, use the root .env file instead
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ------------------------------------------------------------------------------
# For local development: use 'localhost'
# For Docker: use 'db' (see root .env.example)
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/arogya

# Individual database connection parameters (for reference)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arogya
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ------------------------------------------------------------------------------
# SECURITY
# ------------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ------------------------------------------------------------------------------
# CORS CONFIGURATION
# ------------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# ------------------------------------------------------------------------------
# AI & API KEYS
# ------------------------------------------------------------------------------
# Google Gemini API - Required for AI diagnosis, nutrition plans
GEMINI_API_KEY=your_gemini_api_key_here

# Google API Key (alternative naming)
GOOGLE_API_KEY=your_gemini_api_key_here

# OpenWeatherMap API
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHERMAP_API_KEY=your_openweather_api_key_here

# ------------------------------------------------------------------------------
# OPTIONAL APIs
# ------------------------------------------------------------------------------
# AQI API (SAFAR - India specific)
SAFAR_API_KEY=

# Nutrition APIs
USDA_API_KEY=
EDAMAM_APP_ID=
EDAMAM_APP_KEY=

# Translation API
MYMEMORY_API_KEY=

# Messaging APIs
MSG91_AUTH_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Payment Gateway
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Image Storage
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Google Maps API
GOOGLE_MAPS_API_KEY=

# OpenRouteService
OPENROUTESERVICE_API_KEY=

# Jitsi Meet Configuration
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=

# ------------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# ------------------------------------------------------------------------------
APP_ENV=development
DEBUG=true
APP_NAME=Arogya-Swarm

# Logging
LOG_LEVEL=INFO
